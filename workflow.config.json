{
  "workflow_description": {
    "name":"germline_small_var_call",
    "version": 1.0,
    "label":"Germline small variant calling - test",
    "type":"germline_small_var_call",
    "inputs":[
      "mapped/{sample}.bam*"
    ],
    "outputs":[
      "final_variant_table.xlsx",
      "final_variant_table.tsv",
      "per_sample_final_var_tabs/*",
      "logs/*",
      "merged/*",
      "annotate/*",
      "variant_calls/*"
    ],
    "inputs_optional":[
      "cohort_data/cohort_variants.tsv"
    ],
    "report_index": "annotate/all_variants.annotated.tsv_summary.html",
    "reports":[
      "annotate/all_variants.annotated.tsv_summary.html"
    ]
  },
  "general_params": [
    "entity_name",
    "sample_name"
  ],
  "requested_params": [
    "is_paired",
    "reference",
    "lib_ROI"
  ],
  "gui_params" : {
    "primary": {
      "callers": {
        "label": "Variant callers to use",
        "type": "string",
        "default": "strelka;vardict;haplotypecaller"
      },
      "format": {
        "label": "Result variant table format ",
        "type": "enum",
        "default": "default",
        "list": {
          "default": "Default germline format",
          "BRONCO": "BRONCO",
          "slaby_children_germ" : "Pediatric oncology project format"
        }
      }
    },
    "detailed": {
      "min_variant_frequency": {
        "label": "Minimal variant frequency to report in percent",
        "type": "int",
        "default": 25
      },
      "min_var_reads_threshold": {
        "label": "Minimal number of variant reads to report variant.",
        "type": "int",
        "default": 5
      },
      "min_callers_threshold": {
        "label": "Minimal number callers to call the variant.",
        "type": "int",
        "default": 1
      },
      "use_cohort_data": {
        "label": "Load variants from previous experiments for annotations. need file: cohort_data/cohort_variants.tsv",
        "type": "bool",
        "default": false
      },
      "create_cohort_data": {
        "label": "Create info about the variants from ",
        "type": "bool",
        "default": true
      }
    },
    "samples": {
      "donor": {
        "label": "Patient ID",
        "type": "string",
        "default": ""
      },
      "tumor_normal": {
        "label": "Tumor/normal",
        "type": "enum",
        "default": "normal",
        "list": {
          "tumor": "tumor",
          "normal": "normal"
        }
      }
    }
  }
}

